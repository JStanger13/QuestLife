<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/blue_grey_500">


        <EditText
            android:id="@+id/create_main_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="16dp"
            android:hint="Description of Quest"
            android:textColorHint="@color/textColorPrimary"
            android:textColor="@color/textColorPrimary"
            android:backgroundTint="@color/textColorPrimary"
            android:fontFamily="sans-serif"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/create_boss"
                android:layout_centerHorizontal="true"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginBottom="10dp"
                />
            <TextView
                android:textColor="@color/textColorPrimary"
                android:id="@+id/create_boss_text"
                android:textSize="15dp"
                android:gravity="center"
                android:layout_below="@id/create_boss"
                android:text="Complete this quest to defeat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="@color/textColorPrimary"

                android:id="@+id/create_boss_name"
                android:layout_below="@id/create_boss_text"
                android:textSize="50dp"
                android:gravity="center"
                android:text="Gryphon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>
