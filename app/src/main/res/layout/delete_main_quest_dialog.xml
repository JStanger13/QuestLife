<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:gravity="center"
        android:id="@+id/dialog_quest_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:gravity="center"
        android:layout_below="@id/dialog_quest_title"
        android:id="@+id/dialog_quest_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:gravity="center"
        android:id="@+id/dialog_percent"
        android:layout_below="@id/dialog_quest_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <ImageView

        android:id="@+id/dialog_boss"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/dialog_percent"
        android:layout_width="100dp"
        android:layout_height="100dp" />


<TextView
    android:gravity="center"
    android:text="Are You Sure You Want To Delet Quest?"
    android:layout_below="@id/dialog_boss"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />
</RelativeLayout>